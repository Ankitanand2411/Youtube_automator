{
  "manifest_version": 3,
  "name": "YouTube Tag Automator",
  "version": "1.0",
  "description": "Paste and auto-enter comma-separated tags into YouTube Studio.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": ["https://studio.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
